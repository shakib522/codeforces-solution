
#include <bits/stdc++.h>
using namespace std;
#define ll long long int
#define dd double
#define pb push_back
#define mp make_pair
#define f first
#define s second
#define pr printf
#define sc scanf
const int siz= 1e5+5;
#define fast ios_base::sync_with_stdio(false);cin.tie(NULL);cout.tie(NULL);
int solve()
{
    ll n,k,i,ans,val,x;
    cin>>n>>k;
    x=k/(n-1);
    if(k%(n-1)==0)
	{
		cout<<x+k-1<<endl;
	}
	else
	{
		cout<<x+k<<endl;
	}
}
int main()
{
	int testcase;
	cin>>testcase;
	while(testcase--)
	{
		solve();
	}
	return 0;
}
